<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:text="忘记密码"
        android:textSize="18dp"
        android:textColor="#2B2941"
        android:background="#d24a58"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#2b2941">
        <EditText
            android:id="@+id/register_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            android:hint="输入手机号码"
            android:textSize="14dp"
            android:textColor="#D1D1D1"
            android:textColorHint="#d1d1d1"
            android:background="@null"
            />
        <View
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/yanzhengma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:textColor="#D1D1D1"
                android:hint="输入验证码"
                android:background="@null"
                android:textColorHint="#d1d1d1"
                />
            <Button
                android:id="@+id/yanzhengma_submit"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="180dp"
                android:text="获取验证码"
                android:background="@drawable/yanzhengma"
                android:textColor="#D1D1D1"
                android:textSize="14dip"
                />
        </LinearLayout>
        <View
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>

        <EditText
            android:id="@+id/register_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dip"
            android:layout_marginLeft="10dp"
            android:hint="设置密码"
            android:textSize="14dp"
            android:background="@null"
            android:textColor="#D1D1D1"
            android:textColorHint="#D1D1D1"
            android:inputType="textPassword"
            />
        <View
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/ConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dip"
            android:layout_marginLeft="10dip"
            android:hint="确认密码"
            android:textSize="14dp"
            android:background="@null"
            android:textColor="#D1D1D1"
            android:textColorHint="#D1D1D1"
            android:inputType="textPassword"
            />
        <View
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/start_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dip"
            android:layout_marginLeft="10dip"
            android:textSize="14dp"
            android:background="@null"
            android:textColor="#D1D1D1"
            android:textColorHint="#D1D1D1"
            android:hint="启动密码"
            android:inputType="textPassword"
            />
        <View
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/ConfirmStartPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dip"
            android:layout_marginLeft="10dip"
            android:textSize="14dp"
            android:background="@null"
            android:textColor="#D1D1D1"
            android:textColorHint="#D1D1D1"
            android:hint="确认启动密码"
            android:inputType="textPassword"
            />
        <View
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="280dp"
            android:layout_height="37dp"
            android:background="#d24a58"
            android:layout_marginTop="30dip"
            android:text="提交"
            android:layout_gravity="center_horizontal"
            android:textColor="#d1d1d1"
            android:textSize="15dp"
            />
    </LinearLayout>


</LinearLayout>
